{# templates/blog/index.html.twig #}
{% extends "base.html.twig" %}

{% block title %}Accueil |
	{{ parent() }}
{% endblock %}

{% block content %}
	<div class="container">
		<div class="row">
			<div class="col s12">
				<a href="{{ path('article_add') }}" class="btn-small blue darken-4">Ajouter un article</a>
			</div>
		</div>
		<div class="row">
			<div class="divider"></div>
		</div>
		<div class="row">
			{% for article in articles %}
				<div class="col s12 m4 l3">
					<div class="article-card">
						<img src="{{ asset('uploads/' ~ article.picture) }}" class="responsive-img">
						<h2>
							<a href="{{ path('article_show', {'id': article.id}) }}">{{ article.title }}</a>
						</h2>
						<span class="date">{{ article.publishedAt|date('d/m/Y') }}</span>
						{% if app.user %}
							<p>
								<a href="{{ path('article_edit', {'id': article.id}) }}" class="btn-small btn-primary">Editer</a>
							</p>
						{% endif %}
					</div>
				</div>
			{% endfor %}
		</div>
	</div>
{% endblock %}
